<% layout("layouts/boilerplate") %>
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-3 rounded-top-4">
                    <h3 class="mb-0">Create New Expense</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/expenses" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input
                                type="text"
                                class="form-control"
                                id="title"
                                name="expense[title]"
                                required
                                autofocus
                            />
                        </div>
                        <div class="mb-3">
                            <label for="date" class="form-label">Date</label>
                            <input
                                type="date"
                                class="form-control"
                                id="date"
                                name="expense[date]"
                                value="<%= new Date().toISOString().substring(0, 10) %>"
                                required
                            />
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input
                                type="number"
                                step="0.01"
                                class="form-control"
                                id="price"
                                name="expense[price]"
                                required
                            />
                        </div>
                        <div class="mb-3">
                            <label for="categorySelect" class="form-label">Category</label>
                            <select
                                id="categorySelect"
                                name="expense[category]"
                                class="form-select"
                                required
                            >
                                <% categories.forEach(cat => { %>
                                <option value="<%= cat %>"><%= cat %></option>
                                <% }) %>
                                <option value="other">- Other -</option>
                            </select>
                        </div>

                        <!-- New-category input, hidden by default -->
                        <div id="newCategoryContainer" class="mb-3" style="display: none">
                            <label for="newCategory" class="form-label">New Category</label>
                            <input
                                type="text"
                                id="newCategory"
                                name="expense[newCategory]"
                                class="form-control"
                                placeholder="Enter new category"
                            />
                        </div>

                        <!-- NOB selector -->
                        <div class="mb-3">
                            <label for="nobSelect" class="form-label">Name of Business (NOB)</label>
                            <select id="nobSelect" name="expense[nob]" class="form-select" required>
                                <% nobs.forEach(nob => { %>
                                <option value="<%= nob %>"><%= nob %></option>
                                <% }) %>
                                <option value="other">- Other -</option>
                            </select>
                        </div>

                        <!-- New-NOB input, hidden by default -->
                        <div id="newNobContainer" class="mb-3" style="display: none">
                            <label for="newNob" class="form-label">New NOB Name</label>
                            <input
                                type="text"
                                id="newNob"
                                name="expense[newNob]"
                                class="form-control"
                                placeholder="Enter new business name"
                            />
                        </div>
                        <div class="mb-3 form-check">
                            <input
                                type="checkbox"
                                class="form-check-input"
                                id="deductable"
                                name="expense[deductable]"
                            />
                            <label class="form-check-label" for="deductable">Deductible</label>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle-fill me-2"></i>Add Expense
                            </button>
                            <a href="/expenses" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle-fill me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/scripts/expenseForm.js"></script>
