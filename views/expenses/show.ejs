<% layout("layouts/boilerplate") %>
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <!-- Responsive column for card width -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h3 class="mb-0"><%= expense.title %></h3>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <span class="badge bg-secondary text-uppercase"
                            ><%= expense.category %></span
                        >
                    </div>

                    <ul class="list-group list-group-flush mb-4 rounded-3 overflow-hidden">
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center py-3"
                        >
                            <strong class="text-muted">Date:</strong>
                            <span class="fw-bold"><%= formatters.formatDate(expense.date) %></span>
                        </li>
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center py-3"
                        >
                            <strong class="text-muted">Amount:</strong>
                            <span class="fw-bold fs-5 text-danger">
                                <%= formatters.formatCurrencyILS(expense.price) %>
                            </span>
                        </li>
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center py-3"
                        >
                            <strong class="text-muted">Paid to:</strong>
                            <span><%= expense.nob %></span>
                        </li>
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center py-3"
                        >
                            <strong class="text-muted">Deductible:</strong>
                            <% if (expense.deductable) { %>
                            <span class="text-success fw-bold">
                                Yes <i class="bi bi-check-circle-fill ms-1"></i>
                            </span>
                            <% } else { %>
                            <span class="text-danger fw-bold">
                                No <i class="bi bi-x-circle-fill ms-1"></i>
                            </span>
                            <% } %>
                        </li>
                    </ul>

                    <div class="row row-cols-1 row-cols-md-4 g-2 mt-3">
                        <div class="col">
                            <a href="/expenses" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-left-circle-fill me-2"></i>Back
                            </a>
                        </div>

                        <div class="col">
                            <a href="/expenses/new" class="btn btn-outline-success w-100" autofocus>
                                <i class="bi bi-plus-circle me-2"></i>New
                            </a>
                        </div>
                        <div class="col">
                            <a
                                href="/expenses/<%= expense._id %>/edit"
                                class="btn btn-outline-warning w-100"
                            >
                                <i class="bi bi-pencil-square me-2"></i>Edit
                            </a>
                        </div>

                        <div class="col">
                            <form
                                action="/expenses/<%= expense._id %>?_method=DELETE"
                                method="POST"
                                class="w-100"
                            >
                                <button
                                    type="submit"
                                    class="btn btn-outline-danger w-100"
                                    onclick="return confirm('Are you sure you want to delete this expense?');"
                                >
                                    <i class="bi bi-trash-fill me-2"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
